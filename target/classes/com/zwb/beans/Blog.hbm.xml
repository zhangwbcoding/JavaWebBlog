<?xml version="1.0" encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >  
  
<hibernate-mapping package="com.zwb.beans">  
    <class name="Blog" table="blog">  
        <id name="blogid" column="blogid">  
            <generator class="uuid"></generator>
        </id>  
        <property name="title" column="title" type="java.lang.String"  
            not-null="true" />  
        <property name="summary" column="summary" type="java.lang.String"  
            not-null="true"  />  
        <property name="content" column="content" type="java.lang.String"  
            not-null="true"  />      
        <property name="created_at" column="created_at" type="java.lang.Long"  
            not-null="true"  /> 
        <property name="userid" column="userid" type="java.lang.String"  
            not-null="true"  /> 
        <property name="username" column="username" type="java.lang.String"  
            not-null="true"  />       
    </class>  
</hibernate-mapping>  